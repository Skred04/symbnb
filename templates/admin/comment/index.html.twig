{% extends 'admin/base.html.twig' %}
{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des commentaires</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Date</td>
                    <td>Auteur</td>
                    <td>Commentaire</td>
                    <td>Note</td>
                    <td>Annonce</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{ comment.id }}</td>
                        <td>{{ comment.createdAt | date('d/m/Y H:i') }}</td>
                        <td>
                            <img src="{{ comment.author.picture }}" class="avatar avatar-micro" alt="Avatar de {{ comment.author.fullName }}">
                            {{ comment.author.fullName }}
                        </td>
                        <td>{{ comment.content }}</td>
                        <td><span class="badge rounded bg-primary">{{ comment.rating }}</span></td>
                        <td>{{ comment.ad.title }}</td>
                        <td>
                            <div class="row">
                                <a href="" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                <a href="" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}