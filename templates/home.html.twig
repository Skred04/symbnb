{% extends 'base.html.twig' %}
{% block title %}
    Bienvenue sur le meilleur réseau d'appartements
{% endblock %}
{% block header %}
    <h2>Voici le header</h2>
{% endblock %}
{% block body %}
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">Bienvenue sur SYMBNB !</h1>
            <p class="col-md-8 fs-4">Nous mettons en relation les voyageurs et les propriétaires qui veulent profiter d'opportunités et gagner de l'argent en proposant leurs biens à la location</p>
            <a class="btn btn-primary btn-lg" href="{{ path('ads_index') }}">
                Voir nos annonces
            </a>
        </div>
    </div>

    <div class="container">

        <h2 class="text-center h1 mt-3 mb-4">Nos appartements stars</h2>

        <div class="row">
            {% for data in ads %}
                {% include 'ad/_ad.html.twig' with {"ad": data.annonce} %}
            {% endfor %}
        </div>

        <h2 class="text-center h1 mt-3 mb-4">Nos propriétaires stars</h2>

        <div class="row">
            {% for data in users %}
            <div class="col">
                <div class="card border-secondary mb-3">
                    <div class="card-body">
                        <h4 class="card-title">{{ data.user.fullName }}</h4>
                        <hr>
                        <div class="card-text">
                            <img src="{{ data.user.picture }}" alt="Avater de {{ data.user.fullName }}" class="float-left mr-3">
                            <p>{{ data.user.introduction }}</p>
                            <a href="{{ path('user_show', {'slug': data.user.slug}) }}" class="btn btn-success float-right">En savoir plus</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
