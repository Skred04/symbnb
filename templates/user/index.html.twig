{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-1" alt="Avatar de {{ user.fullName }}">
                <br>
                <span class="badge bg-primary">{{ user.ads | length }} annonces</span>
            </div>
            <div class="col-9">
                <div class="row">
                    <div class="col-4 btn-group-vertical">
                        <h1>{{ user.fullName }}</h1>
                    </div>
                    {% if user is same as(app.user) %}
                        <div class="col-8 my-3">
                            <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mon compte</a>
                            <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                        </div>
                    {% endif %}
                </div>
                <div class="user-description">
                    {{ user.description | raw }}
                </div>
            </div>

            <hr>

            <h2 class="text-center mb-3">Les annonces de {{ user.fullName }}</h2>
            {% if user.ads | length > 0 %}
                <div class="row">
                    {% for ad in user.ads %}
                        {% include 'ad/_ad.html.twig' %}
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <p>
                        <strong>{{ user.fullName }} n'a pas encore d'annonce sur le site</strong>
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
